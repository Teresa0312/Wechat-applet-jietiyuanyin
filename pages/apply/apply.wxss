.top{
	display: flex;
	flex-direction: row;
	padding: 10rpx 15rpx;
	line-height: 90rpx;
	background: #0188FB;
	color: white;
}

.top image{
	width: 80rpx;
	height: 80rpx;
	background: white;
	border-radius: 50%;
	margin-right: 10rpx;
}


.wel{
	width: 100%;
	text-align: center;
	display: flex;
	flex-direction: column;
	padding: 50rpx 0;
	color: #08365F;
	font-size: 32rpx;
}

.wel text{
	margin-bottom: 10rpx;
}

.start-btn{
	text-align: center;
	margin-top: 45rpx;
}

.start-btn text{
	width: 180rpx;
	color: white;
	font-size: 34rpx;
	background: #0188FB;
	padding: 15rpx 20rpx;
	border-radius: 4px;
}

.width50{
	width: 50%;
}

.head{
  font-size: 34rpx;
}

.question{
  padding-top: 12px;
  padding-left: 6px;
  padding-right: 6px;
  background: white;
}

.que-detail{
  padding-left: 6px;
  padding-right: 6px;
  margin-top: 6px;
  width: 99%;
  padding-bottom: 6px;
  background: white;
}

.queInfo-item{
  width: 90%;
  color: #272822;
  font-size: 32rpx;
  padding: 20rpx;
  border-radius: 4px;
  border: 1px solid #E8E8E8;
  margin-bottom: 20rpx;
}


.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 36%;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: -180rpx 105rpx;
  border-radius: 36rpx;
}

.modal-title {
  padding-top: 30rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}

.modal-content {
  padding: 50rpx 32rpx;
}

.modal-input {
  
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
}

.change text{
  line-height: 82rpx;
  color: gray;
}

.change input{
  margin-left: 10rpx;
  height: 82rpx;
}

.change {
  border: 2rpx solid #ddd;
  border-radius: 4px;
  margin-bottom: 10rpx;
  width: 100%;
  height: 82rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  padding: 0 20rpx;
  background: white;
  box-sizing: border-box;
  color: #333;
  display: flex;
  flex-direction: row;
}

input-holder {
  color: #666;
  font-size: 28rpx;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}

.btn-confirm {
  font-size: 30rpx;
  width: 100%;
  color: #ec5300;
  border: 0;
  text-align: center;
}
