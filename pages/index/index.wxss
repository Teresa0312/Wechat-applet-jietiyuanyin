.container{
  display: flex;
  flex-direction: column;  
  flex-wrap: wrap;
  overflow: hidden;
}

.sea-box ,.sea-in{
  width: 750rpx;
  height: 445rpx;
}

.sea-box image{
  width: 100%;
  height: 100%;
}

.sea-in{
  background: rgba(0,0,0,.2);
  position: absolute;
  top:0rpx;
}

.search-input{
  font-size: 32rpx;
  width: 567rpx;
  margin-top : 182rpx;
  margin-left: 60rpx;
  border-top-left-radius: 4px;
  border-bottom-left-radius: 4px;
  text-indent: 50rpx;
  background: white;
  height: 67rpx;
}

.pho-box{
  width: 67rpx;
  height: 67rpx;
  position: absolute;
  top: 182rpx;
  right: 62rpx;
  border-top-right-radius: 4px;
   border-bottom-right-radius: 4px;
  background: white;
}

.pho-box image{
  width: 54rpx;
  height: 54rpx;
  margin-top: 5rpx;

}

.tabs{
  width: 715rpx;
  height: 600rpx;
  margin: 15rpx;
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;

}

.tab1{
  width: 170rpx;
  height: 410rpx;
  border-radius: 4px;
  padding-top: 180rpx;
  display: flex;
  flex-direction: column;
  padding-left: 60rpx;
  background: rgba(166,215,255,.5)
}

.tab1 text{
  font-size: 54rpx;
  color: rgb(9,97,193);
  line-height: 100rpx;
  letter-spacing: 10rpx;
}

.tab1 image{
  width: 102rpx;
  height: 102rpx;
}

.tab2{
  width: 470rpx;
  margin-left: 15rpx;
  height: 580rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;

}

.box{
  width: 150rpx;
  height: 227rpx;
  padding-top: 60rpx;
  padding-left: 75rpx;
  display: flex;
  flex-direction: column;
  border-radius: 4px;
}

.box text{
  font-size: 36rpx;
  letter-spacing: 3px;
}

.box image{
  width: 82rpx;
  height: 82rpx;
}
