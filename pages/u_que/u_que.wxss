@import "/wxParse/wxParse.wxss";

.container{
  padding-top: 0;
  overflow: hidden;
  padding-bottom: 50rpx;
}
.top{
  width: 100%;
  background: white;
  margin-bottom: 5px;
}

.question{
  padding-top: 12px;
  padding-left: 12px;
  padding-right: 12px;
  line-height: 1.7;
  background: white;
  font-size: 32rpx;
}

.que-detail{
  padding-left: 6px;
  padding-right: 6px;
  margin-top: 6px;
  width: 99%;
  padding-bottom: 6px;
  background: white;
}

.right{background: #DFF0D8;color: #3C763D;border-color: #3C763D}


.wrong{background: #F2DEDE;color: #A94442;border-color: #A94442}

.queInfo-item{
  width: 90%;
  color: #272822;
  font-size: 32rpx;
  padding: 20rpx;
  border-radius: 4px;
  border: 1px solid #E8E8E8;
  margin-bottom: 20rpx;
}

.answer{
  padding: 10px 0;
  text-align: center;
  font-size: 12px;
  background: #E8E8E8;
}

.radio-group{
    font-size: 32rpx;
    color: #41423D;
    display: flex;
    flex-direction: column;
}


.detail{
  margin-top: 3px;
  font-size: 14px;
  color: gray;
}

.answer-infor{
  background: white;
  padding: 6px 12px;
  border-bottom: 10rpx solid #E8E8E8;
}

.user-img{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 10px;
}

.user-info{
  height: 66rpx;
  display: flex;
  flex-direction: column;
}

.user{
  padding-left: 16rpx;
  display: flex;
  flex-direction: row;
}

.time{
  font-size: 20rpx;
  color: gray;
  margin-bottom: 5px;
}

.ans{
  padding:16rpx;
  line-height: 1.7;
  font-size: 30rpx;
  padding-top:30rpx; 
}

.star{
  height: 40rpx;
  padding-left: 20rpx;
  font-size: 32rpx;
  line-height: 40rpx;
  margin-top: 20rpx;
  color: gray;
}

.star{
  display: flex;
  flex-direction: row;
}

.star image{
  height: 38rpx;
  width: 38rpx;
}

.heart{
  position: relative;
  left: 660rpx;
  top: -20rpx;
}

.heart image{
  width: 38rpx;
  height: 38rpx;

}